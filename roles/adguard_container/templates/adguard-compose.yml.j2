#      - 443:443/tcp # DNS-over-HTTPS
#      - 67:67/udp # DHCP server
#      - 68:68/tcp # DHCP server
#      - 68:68/udp # DHCP server
    volumes:
      - "{{ adguard_mount }}/work:/opt/adguardhome/work"
      - "{{ adguard_mount }}/conf:/opt/adguardhome/conf"
    restart: unless-stopped