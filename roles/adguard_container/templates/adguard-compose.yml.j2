version: "2"
services:
  adguardhome:
    image: adguard/adguardhome
    container_name: adguardhome
    network_mode: host

#    ports:
#      - 53:53/tcp # plain dns
#      - 53:53/udp # plain dns
#      - 853:853/tcp # DNS-over-TLS
#      - 3000:3000/tcp # DNS-over-HTTPS
